<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %p %c{2} [%t] %l %m%n"/>
        </Console>
        <RollingFile name="RollingFile" fileName="target/logs/github-automation.log"
                     filePattern="target/logs/github-automation-%d{yyyy-MM-dd}.log" immediateFlush="true"
                     append="true">
            <PatternLayout pattern="%d %p %c{2} [%t] %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="trace">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
        </Root>
    </Loggers>
</Configuration>
